{
  "analysis": {
    "analyzer": {
      "nori": {
        "type": "custom",
        "tokenizer": "nori_tokenizer",
        "filter": [
          "nori_part_of_speech",
          "nori_readingform",
          "lowercase",
          "synonym_filter"
